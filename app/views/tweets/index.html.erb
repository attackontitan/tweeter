<h1>Listing tweets</h1>
<%= button_to "GO TO QUERIES", queries_path, method: :get %>

<table>
  <tr>
    <th>Tweet |</th>
    <th>Tweeted on |</th>
    <th>Query |</th>
    <th>Handle |</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.tweet_id %></td>
    <td><%= tweet.tweeted_on %></td>
    <td><%= tweet.query_id %></td>
    <td><%= tweet.handle %></td>
    <td><%= tweet.message %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br/>

<%= link_to 'New Tweet', new_tweet_path %>
