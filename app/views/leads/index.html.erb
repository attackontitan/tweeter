<h1>Listing leads</h1>
<%= button_to 'show parsed leads', {:controller => "leads", :action => "show_parsed"} %>
<br>
<%= button_to 'Go To Query', queries_path, method: :get %>
<br>
<%= button_to 'Go To Tweet', tweets_path, method: :get %>

<table>
  <tr>
    <th>Tweet</th>
    <th>Webinar title</th>
    <th>Link</th>
    <th>Email</th>
    <th>Type cd</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leads.each do |lead| %>
  <tr>
    <td><%= lead.tweet_id %></td>
    <td><%= lead.webinar_title %></td>
    <td><%= lead.link %></td>
    <td><%= lead.email %></td>
    <td><%= lead.type_cd %></td>
    <td><%= link_to 'Show', lead %></td>
    <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
    <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lead', new_lead_path %>
